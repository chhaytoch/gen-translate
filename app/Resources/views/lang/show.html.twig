{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lang</h1>

    <table>
        <tbody>
            <tr>
                <th>Langname</th>
                <td>{{ lang.langName }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if lang.createdDate %}{{ lang.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifieddate</th>
                <td>{% if lang.modifiedDate %}{{ lang.modifiedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ lang.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if lang.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{% if lang.deleted %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lang_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lang_edit', { 'id': lang.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
