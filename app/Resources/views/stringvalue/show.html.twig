{% extends 'base.html.twig' %}

{% block body %}
    <h1>StringValue</h1>

    <table>
        <tbody>
            <tr>
                <th>Labelvalue</th>
                <td>{{ stringValue.labelValue }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ stringValue.type }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ stringValue.quantity }}</td>
            </tr>
            <tr>
                <th>Createduser</th>
                <td>{{ stringValue.createdUser }}</td>
            </tr>
            <tr>
                <th>Modifieduser</th>
                <td>{{ stringValue.modifiedUser }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if stringValue.createdDate %}{{ stringValue.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifieddate</th>
                <td>{% if stringValue.modifiedDate %}{{ stringValue.modifiedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ stringValue.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if stringValue.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{% if stringValue.deleted %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stringvalue_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stringvalue_edit', { 'id': stringValue.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
